{
    "name": "lkks/work-permit-system",
    "description": "WordPress Work Permit Management System with PDF Export",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "tecnickcom/tcpdf": "^6.6",
        "setasign/fpdi": "2.6.4",
        "phpoffice/phpword": "^1.2",
        "dompdf/dompdf": "^2.0",
        "ext-zip": "*",
        "ext-xml": "*",
        "ext-gd": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "WorkPermitSystem\\": "includes/"
        }
    },
    "config": {
        "vendor-dir": "vendor",
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@composer dump-autoload --optimize"
        ],
        "post-update-cmd": [
            "@composer dump-autoload --optimize"
        ],
        "phpcs": "phpcs --standard=WordPress includes/",
        "phpcbf": "phpcbf --standard=WordPress includes/",
        "test": "phpunit"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}